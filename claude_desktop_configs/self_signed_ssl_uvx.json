{
  "mcpServers": {
    "quads-mcp": {
      "command": "uvx",
      "args": [
          "--from", "quads-mcp", "quads-mcp"
      ],
      "env": {
        "MCP_QUADS__BASE_URL": "https://your-quads-server.com/api/v3",
        "MCP_QUADS__USERNAME": "your-username", 
        "MCP_QUADS__PASSWORD": "your-password",
        "MCP_QUADS__VERIFY_SSL": "false"
      }
    }
  }
}